{{!< default }}
{{#post}}
    <main>
        <div class="row">
            <div class="post col s12 m12 l8 offset-l2">
                    <article class="animated fadeIn card hoverable">
                        
                        <div class="card-action">
                            <h3 class="truncate hvr-forward grey-text text-darken-3">{{title}}</h3>
                            {{> shared_dateControl}}
                        </div>
                        
                        <div class="card-content  blue-grey-text text-lighten-2">
                                   <div class="right-align"> {{!Tag}}
                                        {{#foreach tags}}
                                       <div class="chip hvr-float-shadow"><a href="{{url}}" title="{{name}}" class="blue-grey-text text-lighten-2">{{name}}</a></div>
                                        {{/foreach}}
                                    </div>
                            
                        </div>
                        <div class="card-action grey-text text-darken-3 zh-post-content">
                            {{!Content here}}
                            {{content}}
                        </div>
                            <div class="row"></div>
                            <div class="row"></div>
                        
                        {{! disqus }}
                        <div class="card-action">
                            {{> disqus}}
                        </div>
                        
                    </article>
                </div>
            </div>
            
            
            
            <div class="row"> {{! Previous and Next page navigation}}
                <div class="col s12 m8 offset-m2">
                    {{#next_post}}
                    <a href="{{url}}" class="left">
                        <button class="btn-floating">
                            <i class="material-icons">&#xE5C4;</i>
                        <div class="ripple-container"></div></button>
                        Newer                    
                    </a>
                    {{/next_post}}
                    {{#prev_post}}
                    <a href="{{url}}" class="right">
                        Older
                        <button class="btn-floating">
                            <i class="material-icons">&#xE5C8;</i>
                        </button>
                    </a>
                    {{/prev_post}}
                </div>
            </div>
            
            
        </main>


{{/post}}